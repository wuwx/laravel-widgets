{
    "name": "wuwx/laravel-widgets",
    "description": "A powerful alternative to view composers. Asynchronous widgets, reloadable widgets, console generator, caching - everything you can think of.",
    "license": "MIT",
    "keywords": ["laravel", "widgets", "ajax"],
    "authors": [
        {
            "name": "Nekrasov Ilya",
            "email": "nekrasov.ilya90@gmail.com"
        },
        {
            "name": "Wu Weixin",
            "email": "wuweixin@gmail.com"
        }
    ],
    "homepage": "https://github.com/wuwx/laravel-widgets",
    "require": {
        "php": ">=7.0",
        "illuminate/support": ">=5.5",
        "illuminate/contracts": ">=5.5",
        "illuminate/view": ">=5.5",
        "illuminate/container": ">=5.5",
        "illuminate/console": ">=5.5",
        "illuminate/cache": ">=5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0"
    },
    "autoload": {
        "psr-4": {
            "Arrilot\\Widgets\\": "src/",
            "Wuwx\\LaravelWidgets\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Arrilot\\Widgets\\Test\\": "tests",
            "Wuwx\\LaravelWidgets\\Test\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Wuwx\\LaravelWidgets\\WidgetsServiceProvider"
            ],
            "aliases": {
                "Widget": "Arrilot\\Widgets\\Facades\\Widget",
                "AsyncWidget": "Arrilot\\Widgets\\Facades\\AsyncWidget"
            }
        }
    }
}
